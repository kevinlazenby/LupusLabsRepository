<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C3E1EC"
    tools:context="edu.bme3890.LupusLabs.MainMenuActivity">

    <Button
        android:id="@+id/loginButton"
        android:layout_width="167dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:background="#95CCF0"
        android:onClick="launchWebsite"
        android:text="lupus.org"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/oldTestButton" />

    <Button
        android:id="@+id/instructionsButton"
        android:layout_width="167dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:background="#95CCF0"
        android:onClick="openInstructionsActivity"
        android:text="Instructions"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/logoutButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginButton" />

    <Button
        android:id="@+id/send_email_button"
        android:layout_width="167dp"
        android:layout_height="68dp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="32dp"
        android:background="#95CCF0"
        android:onClick="openEmailActivity"
        android:text="Redcap"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logoutButton" />

    <Button
        android:id="@+id/newTestButton"
        android:layout_width="167dp"
        android:layout_height="68dp"
        android:layout_marginTop="116dp"
        android:layout_marginBottom="32dp"
        android:background="#95CCF0"
        android:text="New Test"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/oldTestButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/oldTestButton"
        android:layout_width="167dp"
        android:layout_height="68dp"
        android:layout_marginBottom="32dp"
        android:background="#95CCF0"
        android:text="Old Tests"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/loginButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newTestButton" />

    <Button
        android:id="@+id/logoutButton"
        android:layout_width="168dp"
        android:layout_height="67dp"
        android:layout_marginTop="32dp"
        android:background="#95CCF0"
        android:text="Logout"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/send_email_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/instructionsButton" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Main Menu"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/newTestButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
